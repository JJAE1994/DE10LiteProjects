library IEEE;
use IEEE.STD_LOGIC_1164.ALL;
use IEEE.STD_LOGIC_UNSIGNED.ALL;
--use IEEE.STD_LOGIC_ARITH.ALL;

entity SPI_Master is
port ( 	clk, reset, MISO: in std_logic;
       	MOSI, CS, SCK, SERVO: out std_logic;
			--data_rx: out std_logic_vector(7 downto 0)
			e,rw,rs        : out std_logic;
			lcd_data	 	 : OUT STD_LOGIC_VECTOR(7 DOWNTO 0)
		);
end SPI_Master;

architecture Behavioral of SPI_Master is

component SPI_FSM is
port ( 	clk, medir, reset, MISO: in std_logic;
       	MOSI, CS, SCK: out std_logic;
			dato_rx: out std_logic_vector(7 downto 0)
		);
end component;

component divisor_frecuencia is
port ( 	clk_in: in std_logic;
       	clk_out: out std_logic
		);
end component;

component muestreador is
port ( 	clk_in: in std_logic;
       	clk_out: out std_logic
		);
end component;

component PWM_generator is
port ( 	clk_in: in std_logic;
       	dc2_45, dc2, dc1_55: out std_logic
		);
end component;


signal clk_20MHz, muestra,p245,p200,p155 : std_logic;
signal selector: std_logic_vector(1 downto 0);
signal data, altura, dec, und: std_logic_vector(7 downto 0);

type state_type is (	S0, S1, S2, S3, S4, S5, S6, S7, S8, S9, 
							S10, S11, S12, S13, S14, S15, S16, S17, S18, S19, 
							S20, S21, S22, S23, S24, S25, S26, S27, S28, S29, 
							S30, S31, S32, S33, S34, S35, S36, S37, S38, S39, IDLE);
signal current_state: state_type;

begin

FSM:SPI_FSM
port map(clk_20MHz, muestra, reset, MISO, MOSI, CS, SCK, data);

DIVF:divisor_frecuencia
port map(clk, clk_20MHz);

PWM:PWM_generator
port map(clk, p245,p200,p155);

REQUESTREAD:muestreador
port map(clk, muestra);



process(data)
begin
	if data<43 and data>34 then
		selector<="10";
	end if;

	if data<62 and data>57 then
		selector<="01";
	end if;

	if data<73 and data>69 then
		selector<="00";
	end if;	
end process;

altura<= data;

process(altura)
begin
	if altura>90 then
		dec<="00001001" + "00110000";
		und<=altura + "00110000" - "01011010";
	elsif altura>80 then
		dec<="00001000" + "00110000";
		und<=altura + "00110000" - "01010000";
	elsif altura>70 then
		dec<="00000111" + "00110000";
		und<=altura + "00110000" - "01000110";
	elsif altura>60 then
		dec<="00000110" + "00110000";
		und<=altura + "00110000" - "00111100";
	elsif altura>50 then
		dec<="00000101" + "00110000";
		und<=altura + "00110000" - "00110010";
	elsif altura>40 then
		dec<="00000100" + "00110000";
		und<=altura + "00110000" - "00101000";
	elsif altura>30 then
		dec<="00000011" + "00110000";
		und<=altura + "00110000" - "00011110";
	elsif altura>20 then
		dec<="00000010" + "00110000";
		und<=altura + "00110000" - "00010100";
	elsif altura>10 then
		dec<="00000001" + "00110000";
		und<=altura + "00110000" - "00001010";
	else
		dec<="00000000" + "00110000";
		und<=altura + "00110000";
	end if;
end process;
						
--data_rx <= data;

	SERVO <= 
	p155		  when selector="00" else
	p200 when selector="01" else 
	p245 when selector="10" else
	'0';
						
PROCESS
VARIABLE cnt: INTEGER RANGE 0 TO 1750000;
BEGIN

WAIT UNTIL(clk'EVENT) AND (clk = '1');

	--Count Clock Ticks
	IF(cnt = 1750000)THEN		
		cnt := 0;
	ELSE
		cnt := cnt  + 1;
	END IF;

	--Slowly Move Into Next States
	IF(cnt = 1500000)THEN		
	--Next State Logic
	
		case current_state is

		
-------------------Function Set-------------------
			 when S0 =>
				current_state <= S1;
				
				LCD_DATA		<= "00110000";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '0';

			 when S1 =>
				current_state <= S2;

				LCD_DATA		<= "00110000";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '0';
				
			 when S2 =>
				current_state <= S3;

				LCD_DATA		<= "00110000";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '0';

-------------------Reset Display-------------------				
			 when S3 =>
				current_state <= S4;

				LCD_DATA		<= "00000001";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '0';
				
			 when S4 =>
				current_state <= S5;

				LCD_DATA		<= "00000001";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '0';	
				
			 when S5 =>
				current_state <= S6;				
				
				LCD_DATA		<= "00000001";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '0';

-------------------Display On-------------------				
			 when S6 =>
				current_state <= S7;					

				LCD_DATA		<= "00001110";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '0';
				
			 when S7 =>
				current_state <= S8;
	
				LCD_DATA		<= "00001110";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '0';
				
			 when S8 =>
				current_state <= S9;	

				LCD_DATA		<= "00001110";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';
				
-------------------Write 'P'-------------------				
			 when S9 =>
				current_state <= S10;			

				LCD_DATA		<= x"50";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';		
				
			 when S10 =>
				current_state <= S11;

				LCD_DATA		<= x"50";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';		
				
-------------------WRITE 'Y'-------------------						
			 when S11 =>
				current_state <= S12;				

				LCD_DATA		<= X"59";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';			
						
			 when S12 =>
				current_state <= S13;	
				
				LCD_DATA		<= X"59";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';						
				
-------------------WRITE 'R'-------------------						
			 when S13 =>
				current_state <= S14;				
				LCD_DATA		<= X"52";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';		
				
			 when S14 =>
				current_state <= S15;
				LCD_DATA		<= X"52";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';		

-------------------WRITE 'O'-------------------							
			 when S15 =>
				current_state <= S16;
				LCD_DATA		<= X"4F";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';		
				
			 when S16 =>
				current_state <= S17;
				LCD_DATA		<= X"4F";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';	
				
-------------------WRITE 'E'-------------------					
			 when S17 =>
				current_state <= S18;	
				LCD_DATA		<= X"45";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';	
				
			 when S18 =>
				current_state <= S19;
				LCD_DATA		<= X"45";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';	

-------------------WRITE 'L'-------------------					
			 when S19 =>
				current_state <= S20;	
				LCD_DATA		<= X"4C";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';	
				
			 when S20 =>
				current_state <= S21;
				LCD_DATA		<= X"4C";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';	

-------------------WRITE 'E'-------------------					
			 when S21 =>
				current_state <= S22;	
				LCD_DATA		<= X"45";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';	
				
			 when S22 =>
				current_state <= S23;
				LCD_DATA		<= X"45";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';	

-------------------WRITE 'C'-------------------					
			 when S23 =>
				current_state <= S24;	
				LCD_DATA		<= X"43";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';	
				
			 when S24 =>
				current_state <= S25;
				LCD_DATA		<= X"43";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';	

-------------------WRITE 'T'-------------------					
			 when S25 =>
				current_state <= S26;	
				LCD_DATA		<= X"54";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';	
				
			 when S26 =>
				current_state <= S27;
				LCD_DATA		<= X"54";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';	

-------------------WRITE 'R'-------------------					
			 when S27 =>
				current_state <= S28;	
				LCD_DATA		<= X"52";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';	
				
			 when S28 =>
				current_state <= S29;
				LCD_DATA		<= X"52";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';	

-------------------WRITE 'O'-------------------					
			 when S29 =>
				current_state <= S30;	
				LCD_DATA		<= X"4F";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';	
				
			 when S30 =>
				current_state <= S31;
				LCD_DATA		<= X"4F";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';	

-------------------WRITE '.'-------------------					
			 when S31 =>
				current_state <= S32;	
				LCD_DATA		<= X"2E";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';	
				
			 when S32 =>
				current_state <= S33;

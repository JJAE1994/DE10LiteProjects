				e	<= '0';
				rw 		<= '0';
				rs		<= '1';			
		
-------------------WRITE 'c'-------------------					
			 when S33 =>
				current_state <= S34;	
				LCD_DATA		<= X"63";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';	
				
			 when S34 =>
				current_state <= S35;
				LCD_DATA		<= X"63";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';	

-------------------WRITE 'o'-------------------					
			 when S35 =>
				current_state <= S36;	
				LCD_DATA		<= X"6F";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';	
				
			 when S36 =>
				current_state <= S37;
				LCD_DATA		<= X"6F";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';			

-------------------WRITE 'm'-------------------					
			 when S37 =>
				current_state <= S38;	
				LCD_DATA		<= X"6D";
				
				e	<= '1';
				rw 		<= '0';
				rs		<= '1';	
				
			 when S38 =>
				current_state <= S39;
				LCD_DATA		<= X"6D";
				
				e	<= '0';
				rw 		<= '0';
				rs		<= '1';			
		
			 when S39 =>
				current_state <= IDLE;				
				
			 when IDLE	=>
				current_state <= IDLE;
				
		    when others =>
				current_state <= IDLE;		 
	
		end case;	

	END IF;
	
END PROCESS;
						
end Behavioral; 
